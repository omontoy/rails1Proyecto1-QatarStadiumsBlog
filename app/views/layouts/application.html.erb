<!DOCTYPE html>
<html>
  <head>
    <title>Blog | QatarStadiums</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <%= link_to "Qatar Stadiums", root_path, class:"navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path, class:"active" %></li>
        </ul>
          
        <ul class="nav navbar-nav navbar-right">
   
          <% if user_signed_in? %>
            <li><%= link_to "Nuevo Post", new_construction_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span> <%= current_user.email[0..current_user.email.index('@')-1] %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Mis Posts", userposts_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Cerrar SesiÃ³n", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>

            <% else %>
            <li><%= link_to "Registrarse", new_user_registration_path %></li>
            <li><%= link_to "Ingresar", new_user_session_path %></li>
            
          <% end %>
          
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

    <%= render 'layouts/messages' %>
    <%= yield %>
  </body>
</html>
