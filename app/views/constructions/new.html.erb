<div class="container">
   <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
         <h1 class="text-center" id="text-show">Nuevo Post</h1>   

         <%= form_for @construction do |f| %>

            <% if @construction.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                <% @construction.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
               <%= f.text_field :name, class:"form-control input-lg", placeholder:"Nombre del Estadio" %>
            </div>   

            <div class="form-group">
               <%= f.url_field :image_url, class:"form-control input-lg", placeholder:"URL del estadio" %>
            </div>

            <div class="form-group">
               <%= f.number_field :capacity, :step => 500, class:"form-control input-lg", placeholder:"Capacidad" %>
            </div>

            <div class="form-group">
               <%= f.text_field :city, class:"form-control input-lg", placeholder:"Ciudad" %>
            </div>   

            <div class="form-group">
               <%= f.text_area :description, rows:"5", class:"form-control input-lg", placeholder:"DescripciÃ³n de la ciudad" %>
            </div>

            <div class="form-group">
               <%= f.submit "Crear Post", class:"btn btn-success btn-block btn-lg" %>
            </div>

         <% end %>
            
      </div>
   </div>
</div>